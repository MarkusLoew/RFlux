year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry("Manual",
	title = "{RFlux}: An R Package for Processing and Cleaning Eddy Covariance Flux Measurements",
	author = c(
		person("Domenico", "Vitale"),
		person("Dario", "Papale"),
		person("ICOS-ETC Team")),
	organization = "ICOS-ETC",
	address = "Viterbo, Italy",
	year = year,
	note = note,
	url = "https://github.com/icos-etc/RFlux",
	textVersion = paste0("Domenico Vitale, Dario Papale and ICOS-ETC Team (", year, "). RFlux: An R Package for Processing and Cleaning Eddy Covariance Flux Measurements. ", note, "."))
